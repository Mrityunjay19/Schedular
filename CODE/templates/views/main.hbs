    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

        <title>
            Scheduler
        </title>

        <link rel = "stylesheet" href="./css/main.css"/>
    </head>

    <body>
        <nav class="navbar navbar-expand-sm bg-dark" id = "nav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="./">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://en.wikipedia.org/wiki/Round-robin_scheduling">RoundRobin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://en.wikipedia.org/wiki/Single-elimination_tournament">Knockout</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.google.co.in/?gfe_rd=cr&ei=M9rMVITxMMeBuAST7ICIBA&gws_rd=ssl">Exit</a>
                </li>
            </ul>
        </nav>

        <br />
        <br />
        <br />
        <br />

        <section>

            <img id = "image" src="./img/main.jpg"/>

        <h1 id = "heading">
            Tournament Scheduler
        </h1>

        <h3>
            Creates The Schedule Instantly
        </h3>

        <h5 id = "desc">
            Create the schedule for your tournament now.
        </h5>

        <main>
            <section>
                <div class = "top">Sport</div>
                <select class = "data" id = "selectsport">
                    <option>Select your Sport</option> 
                    <option>Basketball</option> 
                    <option>Carrom</option> 
                    <option>Chess</option> 
                    <option>Cricket</option>
                    <option>Football</option>
                    <option>Hockey</option> 
                    <option>Marathon</option> 
                    <option>400m_Race</option> 
                    <option>Swimming</option> 
                </select>
            </section>

            <section>
                <div class = "top">Type of Schedule</div>
                <select id="typeofschedule" class = "data">
                    <option value="type of schedule">Type of schedule</option>
                </select>
            </section>


            <section>
                <div class = "top">Number Of Pools</div>
                <select id = "noofpools" class = "data">
                    <option value="number of pools">Number of pools</option> 
                </select>
            </section>
            
            <section>
                <div class = "top" id = "teams">Number of Teams</div>
    
                <select  id="noofteams" class = "data">
                    <option id = "nteams" value = "number of teams">Number of teams</option>
                </select>
        
            </section>
            
            
    
            <div>
                <button id = "submit" type="button">Create Schedule</button>
            </div>

        </main>

        <p id= "para">Select the number of teams and type of schedule 
            above to start the tournament.</p>

        
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        </section>

        

